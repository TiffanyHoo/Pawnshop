.mainDiv {
  height: 100%;
  position: relative;
}
.box {
  width: 25%;
  height: '240px';
  padding: 0 !important;
  position: relative;
  background-size: 100% 100%;
}
.box .up {
  margin: 10px;
  padding: 5px;
  width: calc(100% - 20px);
  height: calc(100% - 20px);
  border: 2px solid #eee;
  box-shadow: 2px 2px 3px #888888;
  font-size: 18px;
  font-weight: bold;
  border-radius: 18px;
  color: #666;
  text-align: right;
  position: absolute;
  perspective: 1000px;
  transition: 0.5s ease-in-out;
}
.box .mask {
  margin: 10px;
  padding: 15px;
  width: calc(100% - 20px);
  height: calc(100% - 20px);
  background-color: #eee;
  border-radius: 8px;
  color: #555;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  font-family: '微软雅黑';
  font-weight: bold;
  position: absolute;
  backface-visibility: hidden;
  perspective: 1000px;
  transform: rotateY(-180deg);
  transition: 0.5s ease-in-out;
  display: none;
}
.box .mask .infoDiv {
  height: 90%;
  overflow-y: scroll;
}
.box .mask .infoDiv .info {
  width: 100%;
  text-align: left;
  line-height: 22px !important;
  word-wrap: break-word;
}
.box .mask button {
  margin: 10px;
}
.box:hover .up {
  transform: rotateY(-180deg);
}
.box:hover .mask {
  transform: rotateY(-360deg);
  display: block;
}
.page {
  margin-top: 10px !important;
  text-align: center;
}
